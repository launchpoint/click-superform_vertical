%label
  =se($obj->superform_label_for($field))
%br
=select_field($field, $options, $data['value_field'], $data['display_field'], 'id', $id)
:js
  $(document).ready( function() {
    e = $('#<?=$id?>');
    <? if(!$data['enabled']):?>
      e.attr('disabled', true); 
    <? endif; ?>
    <? if($data['autopostback']): ?>
      e.change( function() {
        var form = $(this).parents('form:first');
        $("input[name='superform_cmd']", form).val('refresh');
        form.submit();
      });
    <? endif; ?>
  });
